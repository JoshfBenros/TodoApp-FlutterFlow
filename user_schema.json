{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User",
  "description": "Schema for user documents in Firestore (users collection).",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "minLength": 1,
      "description": "Auth UID; also used as the document ID."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address."
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "User's display name."
    },
    "photo_url": {
      "type": "string",
      "format": "uri",
      "description": "Profile photo URL (Firebase Storage or other)."
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the user record was created."
    },
    "phone_number": {
      "type": "string",
      "description": "Phone number as entered (string)."
    },
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "User birthday stored as a Firestore timestamp."
    }
  },
  "required": ["uid", "email", "display_name", "created_time"],
  "additionalProperties": false
}

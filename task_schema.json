{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task",
  "description": "Schema for task documents in Firestore (tasks collection).",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Short task title (e.g., 'Study for CSF430')."
    },
    "completed": {
      "type": "boolean",
      "description": "Completion status of the task."
    },
    "user": {
      "type": "string",
      "description": "Reference path to the owning user (e.g., 'users/<uid>').",
      "pattern": "^users/[A-Za-z0-9_-]+$"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the task was created."
    },
    "time": {
      "type": "string",
      "description": "Optional human-readable time (e.g., '9pm')."
    }
  },
  "required": ["title", "completed", "user", "created"],
  "additionalProperties": false
}
